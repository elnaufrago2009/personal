#region-deparments.container

  .region
    .region-title
      %h1= page_title!('deparments')

    .region
      .admin-control
        = link_to 'Crear Deparment', new_deparment_path, class: 'btn btn-primary'

      .table-responsive
        %table.table
          %tr
            %th Name
            %th
            %th
            %th

          - @deparments.each do |deparment|
            %tr
              %td= deparment.name
              %td= link_to 'Ver', deparment, class: 'btn btn-info'
              %td= link_to 'Editar', edit_deparment_path(deparment), class: 'btn btn-success'
              %td= link_to 'Eliminar', deparment, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
