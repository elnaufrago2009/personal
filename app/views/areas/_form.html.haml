= form_for @area, :html => { class: 'form-horizontal', role: 'form' } do |f|
  - if @area.errors.any?
    #error_explanation
      %h2= "#{pluralize(@area.errors.count, "error")}"
      %ul
        - @area.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :center_work_id, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select :center_work_id, CenterWork.all.collect{|x| [x.name, x.id]}, {} , class: 'form-control'
  .actions
    = f.submit 'Guardar', class: 'btn btn-default'
