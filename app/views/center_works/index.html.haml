#region-center_works.container

  .region
    .region-title
      %h1= page_title!('Locales')

    .region
      .admin-control
        = link_to 'Crear Local', new_center_work_path, class: 'btn btn-primary'
    %br
    .row
      .col-sm-5
        .table-responsive
          %table.table
            %tr
              %th Nombre
              %th Departamento              
              %th Acciones

            - @center_works.each do |center_work|
              %tr
                %td= center_work.name
                %td= center_work.deparment.name
                %td
                  = link_to 'Ver', center_work, class: 'btn btn-info'
                  = link_to 'Editar', edit_center_work_path(center_work), class: 'btn btn-success'
                  = link_to 'Eliminar', center_work, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
